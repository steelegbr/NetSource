#:kivy 1.0.9

<ScheduleServiceBanner>:
        height: "45dp"
        size_hint_y: None
        Label:
                canvas.before:
                        Color:
                                rgba: root.status_colour
                        Rectangle:
                                size: self.size
                                pos: self.pos
                bold: True
                font_size: 32
                size_hint_x: 1
                text: root.status_text
        Button:
                font_size: 32
                on_press: root.toggle_schedule_service()
                size_hint_x: 0.5
                text: root.button_text

<AudioSelectBlock>:
        height: "55dp"
        size_hint_y: None
        Label:
                bold: True
                font_size: 24
                size_hint_x: 0.5
                text: root.label_text
        Spinner:
                on_text: root.change_sound_card(self.text)
                padding: [0]
                size_hint_x: 1
                text: root.selected_sound_card
                values: root.sound_cards

<AudioLevelsBlock>:
        cols: 1
        height: "20dp"
        size_hint_y: None
        ProgressBar:
                max: 100
                size_hint_x: 1
                value: root.level_left
                size_hint_x: 0.25
        ProgressBar:
                max: 100
                size_hint_x: 1
                value: root.level_right


<ScheduleSelectBlock>:
        height: "55dp"
        size_hint_y: None
        Label:
                bold: True
                font_size: 24
                size_hint_x: 0.5
                text: root.label_text
        Spinner:
                on_text: root.change_day_of_week(self.text)
                padding: [0]
                size_hint_x: 1
                text: root.selected_day_of_week
                values: root.days_of_week
        Label:
                bold: True
                font_size: 24
                size_hint_x: 0.2
                text: "at"
        Spinner:
                on_text: root.change_hour(self.text)
                padding: [0]
                size_hint_x: 0.4
                text: root.selected_hour
                values: root.hours
        Label:
                bold: True
                font_size: 24
                size_hint_x: 0.2
                text: ":"
        Spinner:
                on_text: root.change_minute(self.text)
                padding: [0]
                size_hint_x: 0.4
                text: root.selected_minute
                values: root.minutes
        Label:
                bold: True
                font_size: 24
                size_hint_x: 0.2
                text: ":"
        Spinner:
                on_text: root.change_second(self.text)
                padding: [0]
                size_hint_x: 0.4
                text: root.selected_second
                values: root.seconds


<HomeScreen>:
        cols: 1
        padding: [5, 0]
        spacing: [0, 20]
        ScheduleServiceBanner:
        AudioSelectBlock:
                audio_input: True
        AudioLevelsBlock:
                audio_input: True
        AudioSelectBlock:
                audio_input: False
        AudioLevelsBlock:
                audio_input: False
        ScheduleSelectBlock:
                start_time: True
        ScheduleSelectBlock:
                start_time: False
                
            